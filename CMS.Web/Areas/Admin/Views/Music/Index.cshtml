@model ICollection<CMS.Models.Music.MusicListModel>

@{
    ViewBag.Title = "Hudba v přehrávači";
}

<p>Aktuální repetoár <a href="~/whatweplay/Repertoar-Marketa-Vodickova-Filip-Vitu.pdf">PDF</a>.</p>

<a asp-action="UpdateFile" class="btn btn-outline-dark">Nahrát nový soubor</a>

<br />

<a asp-action="Create" class="btn btn-outline-dark">Přidat skladbu do přehrávače</a>

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Název</th>
        <th>Popis</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title)</td>
            <td>@item.VideoId</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Upravit</a> 
                @Html.DisplayText("|")
                <a asp-action="Delete" asp-route-id="@item.Id">Smazat</a>
            </td>
        </tr>
    }
    </tbody>
</table>
